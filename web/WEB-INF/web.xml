<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BattleShips</servlet-name>
        <servlet-class>Servlets.BattleShips</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StartGame</servlet-name>
        <servlet-class>Servlets.StartGame</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadGame</servlet-name>
        <servlet-class>Servlets.UploadGame</servlet-class>
        <async-supported>true</async-supported>
    </servlet>
    <servlet>
        <servlet-name>PlayerAction</servlet-name>
        <servlet-class>Servlets.PlayerAction</servlet-class>
        <async-supported>true</async-supported>
    </servlet>
    <servlet>
        <servlet-name>RefreshAvailableGames</servlet-name>
        <servlet-class>Servlets.RefreshAvailableGames</servlet-class>
        <async-supported>true</async-supported>
    </servlet>
    <servlet>
        <servlet-name>DeleteGame</servlet-name>
        <servlet-class>Servlets.DeleteGame</servlet-class>
        <async-supported>true</async-supported>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BattleShips</servlet-name>
        <url-pattern>/BattleShips</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UploadGame</servlet-name>
        <url-pattern>/UploadGame</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>StartGame</servlet-name>
        <url-pattern>/StartGame</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PlayerAction</servlet-name>
        <url-pattern>/Action</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RefreshAvailableGames</servlet-name>
        <url-pattern>/RefreshList</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteGame</servlet-name>
        <url-pattern>/Delete</url-pattern>
    </servlet-mapping>
</web-app>